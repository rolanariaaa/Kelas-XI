<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo Dialog Pesan"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMPILKAN TOAST"
        android:onClick="showToast"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMPILKAN ALERT DIALOG"
        android:onClick="showAlert"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnAlertDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMPILKAN ALERT DENGAN TOMBOL"
        android:onClick="showAlertButton"/>

</LinearLayout>